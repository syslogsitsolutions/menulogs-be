generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String               @id @default(uuid())
  name                String
  email               String               @unique
  password            String
  emailVerified       Boolean              @default(false)
  role                Role                 @default(OWNER)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  activities          Activity[]
  businesses          Business[]
  ordersCreated       Order[]              @relation("OrderCreatedBy")
  ordersServed        Order[]              @relation("OrderServedBy")
  passwordResetTokens PasswordResetToken[]
  paymentMethods      PaymentMethod[]
  sessions            Session[]
  staffRecords        Staff[]              @relation("StaffUser")

  @@index([email])
  @@map("users")
}

model Session {
  id           String   @id @default(uuid())
  userId       String
  refreshToken String   @unique
  userAgent    String?
  ipAddress    String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([refreshToken])
  @@index([expiresAt])
  @@map("sessions")
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("password_reset_tokens")
}

model Business {
  id               String     @id @default(uuid())
  name             String
  logo             String?
  description      String?
  ownerId          String
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  brandDescription String?
  facebookUrl      String?
  instagramUrl     String?
  twitterUrl       String?
  linkedinUrl      String?
  youtubeUrl       String?
  aboutContent     String?
  aboutImage       String?
  owner            User       @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  locations        Location[]

  @@index([ownerId])
  @@map("businesses")
}

model Location {
  id                      String             @id @default(uuid())
  businessId              String
  name                    String
  slug                    String             @unique
  address                 String
  city                    String
  state                   String
  zipCode                 String
  country                 String             @default("USA")
  phone                   String
  email                   String
  isActive                Boolean            @default(true)
  subscriptionStatus      SubscriptionStatus @default(TRIAL)
  subscriptionPlan        SubscriptionPlan   @default(FREE)
  trialEndsAt             DateTime?
  openingHours            Json
  createdAt               DateTime           @default(now())
  updatedAt               DateTime           @updatedAt
  contactContent          String?
  contactImage            String?
  mapEmbedUrl             String?
  brandColor              String?            @default("#ee6620")
  currentMenuItems        Int                @default(0)
  currentCategories       Int                @default(0)
  currentBanners          Int                @default(0)
  currentFeaturedSections Int                @default(0)
  currentStorageBytes     BigInt             @default(0)
  monthlyImageUploads     Int                @default(0)
  monthlyVideoUploads     Int                @default(0)
  monthlyUploadResetDate  DateTime?
  lastUsageUpdate         DateTime?
  enableDelivery          Boolean            @default(false)
  enableDineIn            Boolean            @default(true)
  enableTakeaway          Boolean            @default(true)
  orderPrefix             String?            @default("ORD")
  serviceChargeRate       Decimal?           @default(0) @db.Decimal(5, 2)
  taxRate                 Decimal?           @default(0) @db.Decimal(5, 2)
  analytics               Analytics[]
  banners                 Banner[]
  categories              Category[]
  featuredSections        FeaturedSection[]
  business                Business           @relation(fields: [businessId], references: [id], onDelete: Cascade)
  menuItems               MenuItem[]
  orders                  Order[]
  staff                   Staff[]
  subscription            Subscription?
  tables                  Table[]

  @@index([businessId])
  @@index([subscriptionStatus])
  @@index([slug])
  @@index([trialEndsAt])
  @@map("locations")
}

model Category {
  id          String     @id @default(uuid())
  locationId  String
  name        String
  description String?
  image       String
  icon        String     @default("ChefHat")
  isVisible   Boolean    @default(true)
  sortOrder   Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  location    Location   @relation(fields: [locationId], references: [id], onDelete: Cascade)
  menuItems   MenuItem[]

  @@index([locationId])
  @@index([isVisible])
  @@map("categories")
}

model MenuItem {
  id              String         @id @default(uuid())
  locationId      String
  categoryId      String
  name            String
  description     String
  price           Decimal        @db.Decimal(10, 2)
  image           String
  images          String[]
  video           String?
  ingredients     String[]
  allergens       String[]
  tags            String[]
  nutritionalInfo Json?
  isVegetarian    Boolean        @default(false)
  isVegan         Boolean        @default(false)
  isGlutenFree    Boolean        @default(false)
  spicyLevel      Int?           @db.SmallInt
  availability    Availability   @default(IN_STOCK)
  preparationTime String?
  sortOrder       Int            @default(0)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  views           MenuItemView[]
  category        Category       @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  location        Location       @relation(fields: [locationId], references: [id], onDelete: Cascade)
  orderItems      OrderItem[]

  @@index([locationId])
  @@index([categoryId])
  @@index([availability])
  @@map("menu_items")
}

model Banner {
  id         String   @id @default(uuid())
  locationId String
  title      String
  subtitle   String?
  image      String
  video      String?
  link       String?
  isActive   Boolean  @default(true)
  sortOrder  Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@index([locationId])
  @@index([isActive])
  @@map("banners")
}

model FeaturedSection {
  id            String   @id @default(uuid())
  locationId    String
  title         String
  description   String?
  image         String
  features      Json
  buttonText    String?
  buttonLink    String?
  imagePosition String   @default("left")
  isActive      Boolean  @default(true)
  sortOrder     Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  location      Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@index([locationId])
  @@index([isActive])
  @@map("featured_sections")
}

model Subscription {
  id                     String             @id @default(uuid())
  locationId             String             @unique
  plan                   SubscriptionPlan
  status                 SubscriptionStatus
  billingCycle           BillingCycle       @default(MONTHLY)
  price                  Decimal            @db.Decimal(10, 2)
  currency               String             @default("USD")
  startDate              DateTime
  endDate                DateTime?
  nextBillingDate        DateTime?
  cancelledAt            DateTime?
  razorpaySubscriptionId String?            @unique
  razorpayPlanId         String?
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt
  teamMemberLimit        Int                @default(2)
  customDomainEnabled    Boolean            @default(false)
  apiAccessEnabled       Boolean            @default(false)
  whiteLabelEnabled      Boolean            @default(false)
  ssoEnabled             Boolean            @default(false)
  gracePeriodEndsAt      DateTime?
  gracePeriodStatus      String?
  lastPaymentAttempt     DateTime?
  paymentRetryCount      Int                @default(0)
  dunningStatus          String?
  invoices               Invoice[]
  location               Location           @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@index([locationId])
  @@index([status])
  @@index([endDate])
  @@index([nextBillingDate])
  @@index([gracePeriodEndsAt])
  @@map("subscriptions")
}

model Invoice {
  id                String        @id @default(uuid())
  subscriptionId    String
  amount            Decimal       @db.Decimal(10, 2)
  currency          String        @default("USD")
  status            InvoiceStatus @default(PENDING)
  dueDate           DateTime
  paidAt            DateTime?
  description       String
  invoiceUrl        String?
  razorpayInvoiceId String?       @unique
  razorpayPaymentId String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  subscription      Subscription  @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@index([subscriptionId])
  @@index([status])
  @@map("invoices")
}

model PaymentMethod {
  id                 String   @id @default(uuid())
  userId             String
  type               String
  last4              String?
  brand              String?
  expiryMonth        Int?
  expiryYear         Int?
  isDefault          Boolean  @default(false)
  razorpayCustomerId String?
  razorpayTokenId    String?  @unique
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("payment_methods")
}

model Analytics {
  id         String        @id @default(uuid())
  locationId String
  type       AnalyticsType
  entityId   String?
  count      Int           @default(1)
  metadata   Json?
  date       DateTime      @default(now())
  location   Location      @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@index([locationId, type, date])
  @@index([entityId])
  @@map("analytics")
}

model MenuItemView {
  id         String   @id @default(uuid())
  menuItemId String
  sessionId  String?
  ipAddress  String?
  userAgent  String?
  viewedAt   DateTime @default(now())
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)

  @@index([menuItemId])
  @@index([viewedAt])
  @@map("menu_item_views")
}

model Activity {
  id          String   @id @default(uuid())
  userId      String
  locationId  String?
  action      String
  entityType  String?
  entityId    String?
  description String
  metadata    Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([locationId])
  @@index([createdAt])
  @@map("activities")
}

model Upload {
  id           String   @id @default(uuid())
  userId       String
  filename     String
  originalName String
  mimeType     String
  size         Int
  s3Key        String   @unique
  s3Bucket     String
  s3Url        String
  entityType   String?
  entityId     String?
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([entityType, entityId])
  @@map("uploads")
}

model Table {
  id         String      @id @default(uuid())
  locationId String
  number     Int
  name       String?
  capacity   Int         @default(4)
  status     TableStatus @default(AVAILABLE)
  qrCode     String?
  sortOrder  Int         @default(0)
  isActive   Boolean     @default(true)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  orders     Order[]
  location   Location    @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@unique([locationId, number])
  @@index([locationId])
  @@index([status])
  @@map("tables")
}

model Order {
  id              String          @id @default(uuid())
  locationId      String
  tableId         String?
  orderNumber     Int
  type            OrderType       @default(DINE_IN)
  status          OrderStatus     @default(PENDING)
  customerName    String?
  customerPhone   String?
  customerEmail   String?
  createdAt       DateTime        @default(now())
  confirmedAt     DateTime?
  preparingAt     DateTime?
  readyAt         DateTime?
  servedAt        DateTime?
  completedAt     DateTime?
  cancelledAt     DateTime?
  subtotal        Decimal         @db.Decimal(10, 2)
  taxAmount       Decimal         @default(0) @db.Decimal(10, 2)
  discountAmount  Decimal         @default(0) @db.Decimal(10, 2)
  tipAmount       Decimal         @default(0) @db.Decimal(10, 2)
  totalAmount     Decimal         @db.Decimal(10, 2)
  paymentStatus   PaymentStatus   @default(PENDING)
  paymentMethod   String?
  createdById     String
  servedById      String?
  notes           String?
  specialRequests String?
  metadata        Json?
  updatedAt       DateTime        @updatedAt
  items           OrderItem[]
  payments        OrderPayment[]
  timeline        OrderTimeline[]
  createdBy       User            @relation("OrderCreatedBy", fields: [createdById], references: [id])
  location        Location        @relation(fields: [locationId], references: [id], onDelete: Cascade)
  servedBy        User?           @relation("OrderServedBy", fields: [servedById], references: [id])
  table           Table?          @relation(fields: [tableId], references: [id])

  @@index([locationId])
  @@index([tableId])
  @@index([status])
  @@index([createdAt])
  @@index([orderNumber])
  @@map("orders")
}

model OrderItem {
  id              String          @id @default(uuid())
  orderId         String
  menuItemId      String
  quantity        Int             @default(1)
  unitPrice       Decimal         @db.Decimal(10, 2)
  totalPrice      Decimal         @db.Decimal(10, 2)
  status          OrderItemStatus @default(PENDING)
  notes           String?
  modifiers       Json?
  sentToKitchenAt DateTime?
  startedAt       DateTime?
  completedAt     DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  menuItem        MenuItem        @relation(fields: [menuItemId], references: [id])
  order           Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([menuItemId])
  @@index([status])
  @@map("order_items")
}

model OrderTimeline {
  id          String   @id @default(uuid())
  orderId     String
  action      String
  description String
  userId      String?
  metadata    Json?
  createdAt   DateTime @default(now())
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([createdAt])
  @@map("order_timeline")
}

model OrderPayment {
  id            String   @id @default(uuid())
  orderId       String
  amount        Decimal  @db.Decimal(10, 2)
  method        String
  status        String   @default("completed")
  transactionId String?
  metadata      Json?
  createdAt     DateTime @default(now())
  order         Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@map("order_payments")
}

model Staff {
  id         String       @id @default(uuid())
  locationId String
  userId     String?
  name       String
  email      String?
  phone      String?
  role       StaffRole    @default(WAITER)
  pin        String?
  isActive   Boolean      @default(true)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  location   Location     @relation(fields: [locationId], references: [id], onDelete: Cascade)
  user       User?        @relation("StaffUser", fields: [userId], references: [id])
  shifts     StaffShift[]

  @@unique([locationId, pin])
  @@index([locationId])
  @@index([userId])
  @@map("staff")
}

model StaffShift {
  id        String    @id @default(uuid())
  staffId   String
  clockIn   DateTime
  clockOut  DateTime?
  notes     String?
  createdAt DateTime  @default(now())
  staff     Staff     @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@index([staffId])
  @@index([clockIn])
  @@map("staff_shifts")
}

enum Role {
  OWNER
  MANAGER
  STAFF
  ADMIN
}

enum SubscriptionStatus {
  TRIAL
  ACTIVE
  INACTIVE
  EXPIRED
  CANCELLED
}

enum SubscriptionPlan {
  FREE
  STANDARD
  PROFESSIONAL
  CUSTOM
}

enum Availability {
  IN_STOCK
  OUT_OF_STOCK
  HIDDEN
}

enum BillingCycle {
  MONTHLY
  YEARLY
}

enum InvoiceStatus {
  PENDING
  PAID
  FAILED
  CANCELLED
}

enum AnalyticsType {
  MENU_VIEW
  ITEM_VIEW
  CATEGORY_VIEW
  ORDER
  CLICK
}

enum TableStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
  CLEANING
}

enum OrderType {
  DINE_IN
  TAKEAWAY
  DELIVERY
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  SERVED
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PARTIAL
  PAID
  REFUNDED
}

enum OrderItemStatus {
  PENDING
  SENT_TO_KITCHEN
  PREPARING
  READY
  SERVED
  CANCELLED
}

enum StaffRole {
  MANAGER
  CASHIER
  WAITER
  KITCHEN
}
