// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== USER & AUTH ====================

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password      String
  emailVerified Boolean  @default(false)
  role          Role     @default(OWNER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  businesses          Business[]
  sessions            Session[]
  activities          Activity[]
  paymentMethods      PaymentMethod[]
  passwordResetTokens PasswordResetToken[]

  @@index([email])
  @@map("users")
}

enum Role {
  OWNER
  MANAGER
  STAFF
  ADMIN
}

model Session {
  id           String   @id @default(uuid())
  userId       String
  refreshToken String   @unique
  userAgent    String?
  ipAddress    String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([refreshToken])
  @@index([expiresAt])
  @@map("sessions")
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("password_reset_tokens")
}

// ==================== BUSINESS & LOCATIONS ====================

model Business {
  id          String   @id @default(uuid())
  name        String
  logo        String?
  description String?
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Brand section fields (for footer)
  brandDescription String?
  facebookUrl      String?
  instagramUrl     String?
  twitterUrl       String?
  linkedinUrl      String?
  youtubeUrl       String?

  // About page fields
  aboutContent String?
  aboutImage   String?

  // Relations
  owner     User       @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  locations Location[]

  @@index([ownerId])
  @@map("businesses")
}

model Location {
  id                 String             @id @default(uuid())
  businessId         String
  name               String
  slug               String             @unique
  address            String
  city               String
  state              String
  zipCode            String
  country            String             @default("USA")
  phone              String
  email              String
  isActive           Boolean            @default(true)
  subscriptionStatus SubscriptionStatus @default(TRIAL)
  subscriptionPlan   SubscriptionPlan   @default(FREE)
  trialEndsAt        DateTime?
  openingHours       Json
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  // Contact page fields
  contactContent String?
  contactImage   String?
  mapEmbedUrl    String?

  // Brand customization
  brandColor     String?  @default("#ee6620")

  // Relations
  business         Business          @relation(fields: [businessId], references: [id], onDelete: Cascade)
  categories       Category[]
  menuItems        MenuItem[]
  banners          Banner[]
  featuredSections FeaturedSection[]
  subscription     Subscription?
  analytics        Analytics[]

  @@index([businessId])
  @@index([subscriptionStatus])
  @@index([slug])
  @@map("locations")
}

enum SubscriptionStatus {
  TRIAL
  ACTIVE
  INACTIVE
  EXPIRED
  CANCELLED
}

enum SubscriptionPlan {
  FREE
  STARTER
  PROFESSIONAL
  ENTERPRISE
}

// ==================== MENU CONTENT ====================

model Category {
  id          String   @id @default(uuid())
  locationId  String
  name        String
  description String?
  image       String
  icon        String   @default("ChefHat")
  isVisible   Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  location  Location   @relation(fields: [locationId], references: [id], onDelete: Cascade)
  menuItems MenuItem[]

  @@index([locationId])
  @@index([isVisible])
  @@map("categories")
}

model MenuItem {
  id              String       @id @default(uuid())
  locationId      String
  categoryId      String
  name            String
  description     String
  price           Decimal      @db.Decimal(10, 2)
  image           String
  images          String[]
  video           String?
  ingredients     String[]
  allergens       String[]
  tags            String[]
  nutritionalInfo Json?
  isVegetarian    Boolean      @default(false)
  isVegan         Boolean      @default(false)
  isGlutenFree    Boolean      @default(false)
  spicyLevel      Int?         @db.SmallInt
  availability    Availability @default(IN_STOCK)
  preparationTime String?
  sortOrder       Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  // Relations
  location Location       @relation(fields: [locationId], references: [id], onDelete: Cascade)
  category Category       @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  views    MenuItemView[]

  @@index([locationId])
  @@index([categoryId])
  @@index([availability])
  @@map("menu_items")
}

enum Availability {
  IN_STOCK
  OUT_OF_STOCK
  HIDDEN
}

model Banner {
  id         String   @id @default(uuid())
  locationId String
  title      String
  subtitle   String?
  image      String
  video      String?
  link       String?
  isActive   Boolean  @default(true)
  sortOrder  Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@index([locationId])
  @@index([isActive])
  @@map("banners")
}

model FeaturedSection {
  id            String   @id @default(uuid())
  locationId    String
  title         String
  description   String?
  image         String
  features      Json // Array of { title: string, description: string }
  buttonText    String?
  buttonLink    String?
  imagePosition String   @default("left") // 'left' | 'right'
  isActive      Boolean  @default(true)
  sortOrder     Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@index([locationId])
  @@index([isActive])
  @@map("featured_sections")
}

// ==================== BILLING & PAYMENTS ====================

model Subscription {
  id                     String             @id @default(uuid())
  locationId             String             @unique
  plan                   SubscriptionPlan
  status                 SubscriptionStatus
  billingCycle           BillingCycle       @default(MONTHLY)
  price                  Decimal            @db.Decimal(10, 2)
  currency               String             @default("USD")
  startDate              DateTime
  endDate                DateTime?
  nextBillingDate        DateTime?
  cancelledAt            DateTime?
  razorpaySubscriptionId String?            @unique
  razorpayPlanId         String?
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt

  // Relations
  location Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)
  invoices Invoice[]

  @@index([locationId])
  @@index([status])
  @@map("subscriptions")
}

enum BillingCycle {
  MONTHLY
  YEARLY
}

model Invoice {
  id                String        @id @default(uuid())
  subscriptionId    String
  amount            Decimal       @db.Decimal(10, 2)
  currency          String        @default("USD")
  status            InvoiceStatus @default(PENDING)
  dueDate           DateTime
  paidAt            DateTime?
  description       String
  invoiceUrl        String?
  razorpayInvoiceId String?       @unique
  razorpayPaymentId String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@index([subscriptionId])
  @@index([status])
  @@map("invoices")
}

enum InvoiceStatus {
  PENDING
  PAID
  FAILED
  CANCELLED
}

model PaymentMethod {
  id                 String   @id @default(uuid())
  userId             String
  type               String
  last4              String?
  brand              String?
  expiryMonth        Int?
  expiryYear         Int?
  isDefault          Boolean  @default(false)
  razorpayCustomerId String?
  razorpayTokenId    String?  @unique
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("payment_methods")
}

// ==================== ANALYTICS ====================

model Analytics {
  id         String        @id @default(uuid())
  locationId String
  type       AnalyticsType
  entityId   String?
  count      Int           @default(1)
  metadata   Json?
  date       DateTime      @default(now())

  // Relations
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@index([locationId, type, date])
  @@index([entityId])
  @@map("analytics")
}

enum AnalyticsType {
  MENU_VIEW
  ITEM_VIEW
  CATEGORY_VIEW
  ORDER
  CLICK
}

model MenuItemView {
  id         String   @id @default(uuid())
  menuItemId String
  sessionId  String?
  ipAddress  String?
  userAgent  String?
  viewedAt   DateTime @default(now())

  // Relations
  menuItem MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)

  @@index([menuItemId])
  @@index([viewedAt])
  @@map("menu_item_views")
}

// ==================== ACTIVITY LOG ====================

model Activity {
  id          String   @id @default(uuid())
  userId      String
  locationId  String?
  action      String
  entityType  String?
  entityId    String?
  description String
  metadata    Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([locationId])
  @@index([createdAt])
  @@map("activities")
}

// ==================== FILE UPLOADS ====================

model Upload {
  id           String   @id @default(uuid())
  userId       String
  filename     String
  originalName String
  mimeType     String
  size         Int
  s3Key        String   @unique
  s3Bucket     String
  s3Url        String
  entityType   String?
  entityId     String?
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([entityType, entityId])
  @@map("uploads")
}
